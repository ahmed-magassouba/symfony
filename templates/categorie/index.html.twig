{% extends 'base.html.twig' %}
{% block title %}
	Liste des articles
{% endblock %}


{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-md-12">
				<h1>Les des articles classé dans la catégorie
					{{ categorie.name }}</h1>
			</div>
			{% for article in articles %}

				<div class="col-3">
					<article class="card">
						{% for image in article.images %}
							{% if image %}
								<img src="{{ image.name }}" alt="{{ article.title }}" class="card-img-top">
							{% endif %}
						{% endfor %}
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<p class="card-text">{{ article.content }}</p>
							<a href="{{ path('app_article_show',{"id": article.id}) }}" class="btn btn-primary">Lire l'article</a>
						</div>
					</article>
				</div>
			{% endfor %}
			{{ knp_pagination_render(articles) }}
		</section>

	</main>
{% endblock %}
