{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Inscription</h3>
					</div>
					<div class="card-body">
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.firstname) }}
						{{ form_row(registrationForm.lastname) }}
						{{ form_row(registrationForm.pseudo) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
						{{ form_row(registrationForm.RGPDConsent) }}

						<button type="submit" class="btn btn-primary btn-lg my-3">M'inscrire</button>
                        <a class="btn btn-secondary btn-lg my-3" href="{{ path('app_login') }}">Me connecter</a>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
